<ul class="list-group">
    <% todos.forEach((todo) => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= todo.title %>
            <div class="list-group-item-actions">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" onclick="updateTodo(<%= todo.id %>)" <%= todo.checked ? "checked" : "" %> />
                </div>
                <button class="delete-todo-form-btn" onclick="deleteTodo(<%= todo.id %>)">
                    <i class="fa fa-trash"></i>
                </button>
            </div>
        </li>
        <% }) %>
</ul>